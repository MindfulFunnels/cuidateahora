---
//date
import clientData from "../data/config";
import DayInfo from "./DayInfo.astro";
const { firstClass, lastClass } = clientData.eventDate;

// Cálculo de los horarios internacionales
const hour = firstClass.hour;
const eventTimes = [
  { country: "España", flag: "fi fi-es", time: `${hour}:00hs ` }, // España (horario base)
  { country: "Argentina", flag: "fi fi-ar", time: `${hour - 4}:00hs ` }, // CET - 4 horas
  { country: "Colombia", flag: "fi fi-co", time: `${hour - 6}:00hs ` }, // CET - 6 horas
  { country: "México", flag: "fi fi-mx", time: `${hour - 7}:00hs ` }, // CET - 7 horas
];

const spainFlag = "fi fi-es";
---

<div class='flex flex-col gap-4 items-center'>
  <DayInfo
    title='Día 02'
    subtitle='Jueves 20 de Marzo'
    description='Relajación guiada para mejorar tu descanso y despertar llena de energía.'
  />
  <DayInfo
    title='✅ Día 01'
    subtitle='Martes 18 de Marzo - ABAJO TE DEJO EL VIDEO DE LA PRIMERA CLASE'
    description='Descubre cómo el yoga puede tranformar tu bienestar y calmar tu mente. '
  />
</div>

