---
const { title, description } = Astro.props;
---

<div
  class='relative flex flex-col items-start justify-center gap-4 p-6 text-white transition-all duration-1000 ease-linear shadow-lg bg-gradient-to-r from-secondary to-accent hover:from-accent hover:to-secondary rounded-xl'
>
  <!-- LÃ­nea decorativa -->
  <div class='absolute top-0 w-10 h-1 rounded-full left-4 bg-secondary'></div>
  <h3 class='text-lg leading-snug sm:text-xl md:text-2xl lg:text-3xl'>
    {title}
  </h3>
  {
    description && (
      <p class='text-base leading-relaxed md:text-xl lg:text-2xl'>
        {description}
      </p>
    )
  }
  <div
    class='absolute inset-0 bg-gradient-to-tl from-sebg-secondary/10 via-transparent to-[#A85FE8]/10 rounded-xl opacity-0 hover:opacity-100 transition-opacity duration-300'
  >
  </div>
</div>
