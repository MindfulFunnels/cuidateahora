---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import clientData from "../data/config";
const { title } = clientData;
import "../styles/global.css"; // Importa el archivo global.css
import "/node_modules/flag-icons/css/flag-icons.min.css";
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.png' />
    <meta name='generator' content={Astro.generator} />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=yes'
    />
    <meta property='og:title' content={title} />
    <meta
      property='og:description'
      content='Cuídate ahora, el evento online para liberar tensiones, estrés, recargar el cuerpo y tener un sueño reparador'
    />
    <meta property='og:image' content='/favicon.png' />
    <meta property='og:url' content='https://cuidateahora.vercel.app/' />
    <meta property='og:type' content='website' />

    <title>{title}</title>
    <script
      is:inline
      src='https://cdn.jsdelivr.net/npm/flowbite@3.0.0/dist/flowbite.min.js'
    ></script>
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css'
    />
  </head>
  <body
    class='flex relative flex-col justify-center items-center min-h-screen bg-background'
  >
    <!-- Imagen de fondo en la parte superior -->
    <div class='relative w-full'>
      <div
        class='absolute top-0 left-0 w-full md:h-[120vh] sm:h-[80vh] h-[50vh] bg-cover bg-center'
        style="
          background-image: url('/cover.png');
          filter: opacity(0.4) brightness(1); /* Ajuste de opacidad y brillo */
        "
      >
      </div>
      <div
        class='absolute top-0 left-0 w-full md:h-[120vh] sm:h-[80vh] h-[50vh] bg-gradient-to-b from-[#00000000] via-[#0B001A33] to-background'
      >
      </div>
    </div>
    <!-- Contenido principal -->
    <div class='relative z-10'>
      <Header title={title} />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style>
  /* @import url("https://fonts.googleapis.com/css2?family=Bowlby+One+SC&display=swap"); */
  @import url("https://fonts.googleapis.com/css2?family=Lilita+One&display=swap"); /* Lilita */
  @import url("https://fonts.googleapis.com/css2?family=Rammetto+One&display=swap"); /* Rammetto */
  @import url("https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap");
  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
  }
  body {
    margin: 0;
    padding: 0;
    display: flex;
    background-size: contain;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100%;
    font-family: "Outfit", serif;
    font-weight: 400;
    font-style: normal; /* Asegúrate de incluir la fuente */
    color: #fff;
  }
  .container {
    margin: 0 auto;
    padding: 0 16px;
    overflow: hidden;
  }
</style>
